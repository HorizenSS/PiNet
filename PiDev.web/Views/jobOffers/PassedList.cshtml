@model IEnumerable<PiDev.Domain.jobOffer>

@{
    ViewBag.Title = "PassedList";
}

<h2>PassedList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model != null)
{


    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> List Of Job Offers</h4>
                    <hr>
                    <thead>
                        <tr>


                            <th><i class="fa fa-bookmark"></i>  Name </th>





                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {

                        <tbody>
                            <tr>
                                <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.Name)</a></td>


                                <td>
                                    <a href="@Url.Action("Edit"  , new { id = item.IdJobOffer })">

                                        <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                    </a>

                                    <a href="@Url.Action("Delete"  , new { id = item.IdJobOffer })">

                                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>


                                    </a>

                                    <a href="@Url.Action("Details"  , new { id = item.IdJobOffer})">

                                        <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                    </a>


                                    <a href="@Url.Action("AllTasks" ,"Task" , new { IdJobOffer = item.IdJobOffer})">

                                        <span class="label label-info label-mini">Tasks</span>
                                    </a>
                                </td>
                            </tr>




                        </tbody>
                    }


                </table>

            </div>
        </div>
    </div>



}
<a href="@Url.Action("ExportPDF" , "jobOffers")">
    <button type="button" class="btn btn-primary btn-lg btn-block">Export PDF</button>
</a>

