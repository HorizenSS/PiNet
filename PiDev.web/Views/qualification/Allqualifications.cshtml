@model IEnumerable< PiDev.web.Models.qualificationVM>

@{
    ViewBag.Title = "AllTasks";
}

<h2>All Qalifications</h2>

@*<p>
    @Html.ActionLink("Create New", "Create", new { idProject = item.idProject })
</p>*@













<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i> List Of qualifications</h4>
                <hr>
                <thead>
                    <tr>


                        <th><i class="fa fa-bookmark"></i> Description </th>
                        <th><i class="fa fa-bookmark"></i> job offer </th>
                        <th><i class="fa fa-bookmark"></i> Start Date </th>
                        <th><i class="fa fa-bookmark"></i> Deadline </th>
                        <th><i class="fa fa-bookmark"></i> State </th>
                        <th><i class="fa fa-bookmark"></i> User </th>





                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {

                    <tbody>
                        <tr>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.Description)</a></td>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.idJobOffer)</a></td>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.StartDate)</a></td>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.DeadLine)</a></td>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.cin)</a></td>

                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.state)</a></td>


                            <td>
                                <a href="@Url.Action("Create")">

                                    <button class="btn btn-danger btn-xs"><i class="fa fa-plus"></i></button>
                                </a>

                                <a href="@Url.Action("Edit"  ,new { idJobOffer = item.idJobOffer, description = item.Description, idUser = item.cin  })">

                                    <button class="btn btn-success btn-xs"><i class="fa fa-pencil"></i></button>
                                </a>

                                <a href="@Url.Action("Delete"  ,new {description = item.Description })">

                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                </a>


                               
                            </td>
                        </tr>




                    </tbody>
                }


            </table>

        </div>
    </div>
</div>




















